<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color">

    <!-- شريط العنوان العلوي -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:background="@color/card_color"
        android:paddingHorizontal="16dp"
        android:gravity="center_vertical"
        android:elevation="4dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="الباحصانيات والانتاجية"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_notifications"
            android:contentDescription="الإشعارات"
            android:layout_marginStart="16dp" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_search"
            android:contentDescription="بحث"
            android:layout_marginStart="16dp" />

    </LinearLayout>

    <!-- محتوى رئيسي قابل للتمرير -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- أزرار الفترات الزمنية -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <Button
                    android:id="@+id/btn_weekly"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="أسبوعي"
                    android:textColor="@color/primary_color"
                    android:background="@drawable/button_outlined_selected"
                    style="@style/TextButton" />

                <Button
                    android:id="@+id/btn_yearly"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="سنوي"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/button_transparent"
                    style="@style/TextButton" />

                <Button
                    android:id="@+id/btn_monthly"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="شهري"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/button_transparent"
                    style="@style/TextButton" />

                <Button
                    android:id="@+id/btn_focus_time"
                    android:layout_width="0dp"
                    android:layout_height="45dp"
                    android:layout_weight="1"
                    android:text="وقت التركيز"
                    android:textColor="@color/text_secondary"
                    android:background="@drawable/button_transparent"
                    style="@style/TextButton" />

            </LinearLayout>

            <!-- بطاقة الإحصائيات مع مخطط دائري -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- العنوان -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="أداء اليوم"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"
                        android:gravity="center"/>

                    <!-- المحتوى مع المخطط الدائري -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="16dp">

                        <!-- المخطط الدائري لمعدل الكفاءة -->
                        <FrameLayout
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginEnd="20dp">

                            <!-- الخلفية الدائرية -->
                            <View
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:background="@drawable/circle_background" />

                            <!-- النسبة المئوية -->
                            <TextView
                                android:id="@+id/tv_efficiency_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85%"
                                android:textColor="@color/primary_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:layout_gravity="center" />

                        </FrameLayout>

                        <!-- الإحصائيات الجانبية -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <!-- وقت التركيز -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginBottom="20dp"
                                android:padding="12dp"
                                android:background="@drawable/bg_card_item">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="وقت التركيز"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="4dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_clock"
                                        android:contentDescription="وقت"
                                        android:layout_marginEnd="8dp"/>

                                    <TextView
                                        android:id="@+id/tv_focus_time"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="24 ساعة"
                                        android:textColor="@color/secondary_color"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </LinearLayout>

                            <!-- الزيادة في الإنتاجية -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="12dp"
                                android:background="@drawable/bg_card_item">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="%+ م"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="14sp"
                                    android:layout_marginBottom="4dp"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:src="@drawable/ic_trending_up"
                                        android:contentDescription="زيادة"
                                        android:layout_marginEnd="8dp"/>

                                    <TextView
                                        android:id="@+id/tv_increase_percentage"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="+12%"
                                        android:textColor="@color/success_green"
                                        android:textSize="20sp"
                                        android:textStyle="bold"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- بطاقة المهام المكتملة -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="المهام المكتملة أسبوعياً"
                        android:textColor="@color/text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="12dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="أيام الماضية:"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"/>

                        <TextView
                            android:id="@+id/tv_past_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="١٤٢"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_marginStart="4dp"/>

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="تطور مستمر"
                        android:textColor="@color/success_green"
                        android:textSize="14sp"
                        android:textStyle="italic"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginVertical="16dp"/>

            <!-- توزيع المهام -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/card_color"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- عنوان القسم -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="توزيع المهام"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="20dp"/>

                    <!-- العمل -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_work"
                                android:contentDescription="العمل"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="العمل"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tv_work_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="250"
                                android:textColor="@color/work_color"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_work"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:max="500"
                            android:progress="250"
                            android:progressDrawable="@drawable/progress_bar_work"
                            android:indeterminate="false"/>

                    </LinearLayout>

                    <!-- شخصي -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_personal"
                                android:contentDescription="شخصي"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="شخصي"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tv_personal_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="300"
                                android:textColor="@color/personal_color"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_personal"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:max="500"
                            android:progress="300"
                            android:progressDrawable="@drawable/progress_bar_personal"
                            android:indeterminate="false"/>

                    </LinearLayout>

                    <!-- تعلم -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="8dp"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_learning"
                                android:contentDescription="تعلم"
                                android:layout_marginEnd="12dp"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="تعلم"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/tv_learning_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="215"
                                android:textColor="@color/learning_color"
                                android:textSize="16sp"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/progress_learning"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="12dp"
                            android:max="500"
                            android:progress="215"
                            android:progressDrawable="@drawable/progress_bar_learning"
                            android:indeterminate="false"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- خط فاصل -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/divider_color"
                android:layout_marginVertical="8dp"/>

            <!-- بطاقة الإنجاز -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_achievement"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:cardBackgroundColor="@color/success_green"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="32dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="إنجاز رائع!"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="لقد تجاوزت هدفك الأسبوعي بنسبة"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <TextView
                        android:id="@+id/tv_goal_percentage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="١٥/٦٥"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp"/>

                    <Button
                        android:id="@+id/btn_view_details"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:text="عرض التفاصيل"
                        android:textColor="@color/white"
                        android:background="@drawable/button_outlined_white"
                        style="@style/TextButton"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- القائمة السفلية -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/card_color"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_colors"
        app:itemTextColor="@color/bottom_nav_colors"/>

</LinearLayout>